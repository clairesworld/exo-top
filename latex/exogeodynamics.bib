	journal = {The Astrophysical Journal Letters},
	author = {Lisse, Carey M. and Desch, Steven J. and Unterborn, Cayman T. and Kane, Stephen R. and Young, Patrick R. and Hartnett, Hilairy E. and Hinkel, Natalie R. and Shim, Sang-Heon and Mamajek, Eric E. and Izenberg, Noam R.},
