	author = {Höning, Dennis and Tosi, Nicola and Spohn, Tilman},
	month = apr,
	year = {2017},
	note = {Conference Name: EGU General Assembly Conference Abstracts},
	pages = {15878},
	file = {Full Text PDF:/home/claire/Zotero/storage/UU7LDKSP/Höning et al. - 2017 - Water-land ratios of exoplanets.pdf:application/pdf},
}

@article{honingBifurcationGrowthContinental2019,
