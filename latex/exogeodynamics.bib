	year = {2017},
	file = {Snapshot:/home/claire/Zotero/storage/TAGSY4Z9/tel-01699851.html:text/html;Full Text PDF:/home/claire/Zotero/storage/Q3ZKJ7V2/Landais - 2017 - Lois d’échelles et propriétés statistiques multifr.pdf:application/pdf;Snapshot:/home/claire/Zotero/storage/V44FBXK8/tel-01699851.html:text/html},
