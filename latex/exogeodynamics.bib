	keywords = {Venus, Atmosphere, Coupling, Evolution, Feedback, Mantle},
	pages = {1189--1217},
	file = {Full Text PDF:/home/claire/Zotero/storage/6QV933NU/Gillmann and Tackley - 2014 - Atmospheremantle coupling and feedbacks on Venus.pdf:application/pdf;Snapshot:/home/claire/Zotero/storage/5LL3BXU4/2013JE004505.html:text/html},
