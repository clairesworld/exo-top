	journal = {Planetary and Space Science},
	author = {Höning, Dennis and Hansen-Goos, Hendrik and Airo, Alessandro and Spohn, Tilman},
	month = aug,
	year = {2014},
	keywords = {Astrobiology, Plate tectonics, Biological weathering, Continental growth, Global water cycle, Life},
	pages = {5--13},
	file = {ScienceDirect Snapshot:/home/claire/Zotero/storage/ZF589NYV/S0032063313002663.html:text/html;ScienceDirect Full Text PDF:/home/claire/Zotero/storage/U6U6KJZT/Höning et al. - 2014 - Biotic vs. abiotic Earth A model for mantle hydra.pdf:application/pdf},
}

