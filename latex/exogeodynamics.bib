	pages = {391--400},
	file = {ScienceDirect Full Text PDF:/home/claire/Zotero/storage/4G6SBLEH/Grott et al. - 2011 - Volcanic outgassing of CO2 and H2O on Mars.pdf:application/pdf;ScienceDirect Snapshot:/home/claire/Zotero/storage/5GKEZIJ5/S0012821X11003736.html:text/html;ScienceDirect Full Text PDF:/home/claire/Zotero/storage/RVS28NTD/Grott et al. - 2011 - Volcanic outgassing of CO2 and H2O on Mars.pdf:application/pdf;ScienceDirect Snapshot:/home/claire/Zotero/storage/AEJHZLDR/S0012821X11003736.html:text/html},
