	author = {Michael, Peter J. and Graham, David W.},
	month = nov,
	year = {2015},
	keywords = {CO2, Global flux of CO2, Incompatible trace elements, Mid-ocean ridge, Ultradepleted basalts, Volcanic},
	pages = {338--351},
}

