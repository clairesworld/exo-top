	keywords = {Mars, atmosphere, Earth, magma ocean, clement conditions},
	pages = {181--191},
	file = {ScienceDirect Full Text PDF:/home/claire/Zotero/storage/K7YJMREC/Elkins-Tanton - 2008 - Linked magma ocean solidification and atmospheric .pdf:application/pdf;ScienceDirect Snapshot:/home/claire/Zotero/storage/VFCTBQFY/S0012821X08002306.html:text/html},
