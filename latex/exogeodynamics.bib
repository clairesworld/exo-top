@article{grahamThermodynamicEnergeticLimits2020b,
	title = {Thermodynamic and {Energetic} {Limits} on {Continental} {Silicate} {Weathering} {Strongly} {Impact} the {Climate} and {Habitability} of {Wet}, {Rocky} {Worlds}},
