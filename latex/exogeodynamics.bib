@article{oneillOxidationStateIron2018a,
	title = {The oxidation state of iron in {Mid}-{Ocean} {Ridge} {Basaltic} ({MORB}) glasses: {Implications} for their petrogenesis and oxygen fugacities},
	volume = {504},
	issn = {0012-821X},
