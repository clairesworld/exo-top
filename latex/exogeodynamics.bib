	keywords = {convection, mantle, stratification, three-dimensional models, viscosity},
	pages = {351--366},
	file = {ScienceDirect Full Text PDF:/home/claire/Zotero/storage/I8PMFW5C/Dubuffet et al. - 2000 - Multiple scales in mantle convection.pdf:application/pdf;ScienceDirect Snapshot:/home/claire/Zotero/storage/242CG4BF/S0012821X00000819.html:text/html},
