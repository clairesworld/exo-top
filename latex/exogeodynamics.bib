	pages = {e06124},
	file = {Full Text:/home/claire/Zotero/storage/TRTIZNQU/Boujibar et al. - 2020 - Super-Earth Internal Structures and Initial Therma.pdf:application/pdf},
}

@article{soubiranElectricalConductivityMagnetic2018,
