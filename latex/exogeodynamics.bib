	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics},
	file = {arXiv.org Snapshot:/home/claire/Zotero/storage/4WMXD65P/2004.html:text/html;arXiv Fulltext PDF:/home/claire/Zotero/storage/7QCCLHHF/Horner et al. - 2020 - Solar System Physics for Exoplanet Research.pdf:application/pdf},
