	keywords = {dynamic topography},
	pages = {172--186},
	file = {ScienceDirect Full Text PDF:/home/claire/Zotero/storage/VTBSAJTU/Guerri et al. - 2016 - Modelling Earth’s surface topography Decompositio.pdf:application/pdf;ScienceDirect Snapshot:/home/claire/Zotero/storage/Y8IG623E/S0031920116301364.html:text/html},
