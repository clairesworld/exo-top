	author = {Doin, M.-P. and Fleitout, L. and Christensen, U.},
	year = {1997},
	keywords = {Absorption spectra, Photoion yield curves, Polycyclic aromatic hydrocarbons, VUV peaks},
	pages = {2771--2787},
