	keywords = {deterministic, emergent simplicity, river profiles, stochastic, stream power, wavelet power spectra},
	pages = {137--153},
	file = {Snapshot:/home/claire/Zotero/storage/R767HGEU/2018JF004796.html:text/html;Full Text PDF:/home/claire/Zotero/storage/UTTSLTDE/Roberts et al. - 2019 - The Generation and Scaling of Longitudinal River P.pdf:application/pdf},
