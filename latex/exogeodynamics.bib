  eprint = {2006.07403},
  eprinttype = {arxiv},
  file = {/home/claire/Zotero/storage/JGYHBRKJ/Lisse et al. - 2020 - A Geologically Robust Procedure For Observing Rock.pdf;/home/claire/Zotero/storage/SPTLSEV5/2006.html},
  journal = {arXiv:2006.07403 [astro-ph]},
  keywords = {Astrophysics - Earth and Planetary Astrophysics,Astrophysics - Instrumentation and Methods for Astrophysics,Astrophysics - Solar and Stellar Astrophysics},
  primaryClass = {astro-ph}
}

@article{Liu2019,
