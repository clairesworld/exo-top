  eprinttype = {arxiv},
  file = {/home/claire/Zotero/storage/BWCUGDH8/Borisova et al. - 2020 - Planetary Felsic Crust Formation at Shallow Depth.pdf;/home/claire/Zotero/storage/H9H7QJNR/2003.html},
  journal = {arXiv:2003.01508 [astro-ph, physics:cond-mat, physics:physics]},
  keywords = {Astrophysics - Earth and Planetary Astrophysics,Condensed Matter - Materials Science,crust,exoplanets,Physics - Geophysics},
  primaryClass = {astro-ph, physics:cond-mat, physics:physics}
}

