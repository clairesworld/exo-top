	month = sep,
	year = {2003},
	keywords = {subduction, carbon cycle, high pressure, carbonatite, diamond},
	pages = {357--368},
	file = {ScienceDirect Full Text PDF:/home/claire/Zotero/storage/3M6HISD5/Hammouda - 2003 - High-pressure melting of carbonated eclogite and e.pdf:application/pdf;ScienceDirect Snapshot:/home/claire/Zotero/storage/B7C46ZCE/S0012821X03003613.html:text/html},
}

