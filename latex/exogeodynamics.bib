	number = {2},
	urldate = {2020-04-18},
	journal = {Icarus},
	author = {Smrekar, Suzanne E. and Sotin, Christophe},
	month = feb,
	year = {2012},
	keywords = {Geophysics, Planetary dynamics, Thermal histories, Venus, Interior, Volcanism},
	pages = {510--523},
	file = {ScienceDirect Full Text PDF:/home/claire/Zotero/storage/3J77Z7XA/Smrekar and Sotin - 2012 - Constraints on mantle plumes on Venus Implication.pdf:application/pdf;ScienceDirect Snapshot:/home/claire/Zotero/storage/GPI4CG62/S0019103511003563.html:text/html},
}

