  copyright = {Copyright 1992 by the American Geophysical Union.},
  file = {/home/claire/Zotero/storage/7UZKGQ36/Grimm and Phillips - 1992 - Anatomy of a Venusian hot spot Geology, gravity, .pdf;/home/claire/Zotero/storage/UA6ECXQ7/92JE01500.html},
  journal = {Journal of Geophysical Research: Planets},
