	keywords = {degassing rate, melt production, mid-ocean ridges},
	pages = {2884--2904},
	file = {Full Text PDF:/home/claire/Zotero/storage/IJ2SVBCE/Li et al. - 2016 - Quantifying melt production and degassing rate at .pdf:application/pdf;Snapshot:/home/claire/Zotero/storage/94W4D2DZ/2016GC006439.html:text/html},
