	keywords = {Astrophysics - Earth and Planetary Astrophysics, Physics - Geophysics, Physics - Atmospheric and Oceanic Physics, M-R, water worlds},
	file = {arXiv.org Snapshot:/home/claire/Zotero/storage/MEIIVDLB/1911.html:text/html;arXiv Fulltext PDF:/home/claire/Zotero/storage/9WW4QJXC/Turbet et al. - 2019 - Revised mass-radius relationships for water-rich t.pdf:application/pdf},
