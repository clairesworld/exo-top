	month = aug,
	year = {2007},
	note = {Publisher: Copernicus GmbH},
	pages = {465--502},
	file = {Full Text PDF:/home/claire/Zotero/storage/IAS9IVET/Lovejoy and Schertzer - 2007 - Scaling and multifractal fields in the solid earth.pdf:application/pdf;Snapshot:/home/claire/Zotero/storage/965BSE5L/2007.html:text/html;Snapshot:/home/claire/Zotero/storage/7JXXSXAA/2007.html:text/html},
