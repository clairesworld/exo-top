	keywords = {Planetary dynamics, Volcanism, Extra-solar planets, Search for Extraterrestrial Life},
	pages = {215--236},
	file = {ScienceDirect Snapshot:/home/claire/Zotero/storage/83ZYPLVF/S001910351630149X.html:text/html},
}

