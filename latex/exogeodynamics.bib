@article{jellinekConstraintsElasticThickness2008,
	title = {Constraints on the elastic thickness, heat flow, and melt production at early {Tharsis} from topography and magnetic field observations},
	volume = {113},
	copyright = {Copyright 2008 by the American Geophysical Union.},
	issn = {2156-2202},
