	pages = {L15},
	file = {van Summeren et al. - 2011 - MANTLE CONVECTION, PLATE TECTONICS, AND VOLCANISM .pdf:/home/claire/Zotero/storage/8XFFEWVQ/van Summeren et al. - 2011 - MANTLE CONVECTION, PLATE TECTONICS, AND VOLCANISM .pdf:application/pdf},
