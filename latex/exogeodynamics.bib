	author = {Sharma, Priyanka},
	year = {2012},
	note = {ISSN: 9781267578563
Journal Abbreviation: Ph.D. Thesis
Publication Title: Ph.D. Thesis},
}

@article{baldassarriFractalPropertiesIsolines2008,
