	keywords = {Astrophysics - Earth and Planetary Astrophysics},
	file = {arXiv.org Snapshot:/home/claire/Zotero/storage/SFUEL7I7/2006.html:text/html;arXiv Fulltext PDF:/home/claire/Zotero/storage/PVI4RB75/Moore and Cowan - 2020 - Keeping M-Earths Habitable in the Face of Atmosphe.pdf:application/pdf},
