	keywords = {Astrophysics - Earth and Planetary Astrophysics, Physics - Geophysics, Physics - Fluid Dynamics},
	file = {arXiv.org Snapshot:/home/claire/Zotero/storage/GAKE4TVV/2012.html:text/html;arXiv Fulltext PDF:/home/claire/Zotero/storage/UA9HVESW/Beuthe - 2020 - Isostasy with Love II Viscoelastic relaxation.pdf:application/pdf},
